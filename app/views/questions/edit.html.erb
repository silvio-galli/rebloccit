		</ul>
	</div>
	<div class="md-col-8">
		<%= form_for @question do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', palceholder: "Edit the question title." %>
			</div>
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, class: 'form-control', placeholder: "Edit the question." %>
			</div>
			<div class="form-group">
				<%= f.label "If checked, the question is closed" %>
				<%= f.check_box :resolved %>
			</div>
			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>