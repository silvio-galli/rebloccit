<h1><%= @question.title %></h1>
<div class="md-col-8">
	<p><%= @question.body %></p>
	<% if @question.resolved %>
		<h3>This question is closed.</h3>
	<% end %>
</div>
<div class="md-col-4">
	<%= link_to "Edit", edit_question_path(@question.id), class: 'btn btn-success' %>
	<%= link_to "Delete", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want tot delete this question?'} %>
</div>

