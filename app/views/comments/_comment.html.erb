<div class="media">
	<div class="media-body">
		<small>
			<%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
			<% if user_is_authorized_for_comments?(comment) %>
				<%= link_to "Delete", post_comment_path(comment.post_id, comment.id), method: :delete %>
 			<% end %>
		</small>
		<p><%= comment.body %></p>
	</div>
</div>