<h4>Add a comment</h4>

<%= form_for [post, comment] do |f| %>
	<div class="form-group">
		<%= f.label :body, class: 'sr-only' %>
		<%= f.text_area :body, class: 'form-control', placeholder: "Enter your comment" %>
	</div>
	<div class="form-group">
		<%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
	</div>
<% end %>