<h1>Edit Topic</h1>

<div class="row">
	<div class="col-md-4">
		<p>Guidelines to edit post</p>
		<ul>
			<li>bla bla bla bla</li>
			<li>bla bla bla bla</li>
			<li>bla bla bla bla</li>
		</ul>
	</div>
	<div class="col-md-8">
		<%= form_for @topic do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control', placeholder: "Enter the new name for this topic" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: 'form-control', placeholder: "Enter the new description for this topic" %>
			</div>
			<div class="form-group">
				<%= f.label :public, class: 'checkbox' do %>
					<%= f.check_box :public %> Public Topic
				<% end %>
			</div>
			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>