<%= form_for topic do |f| %>
	<% if topic.errors.any? %>
		<div class="alert alert-danger">
			<h4><%= pluralize(topic.errors.count, "error") %></h4>
			<ul>
				<% topic.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= form_group_tag(topic.errors[:name]) do %>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control', placeholder: "Enter the name for this topic" %>
	<% end %>
	<%= form_group_tag(topic.errors[:description]) do %>
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control', placeholder: "Enter the description for this topic" %>
	<% end %>
	<div class="form-group">
		<%= f.label :public, class: 'checkbox' do %>
			<%= f.check_box :public %> Public Topic
		<% end %>
	</div>
	<div class="form-group">
		<%= f.submit "Save", class: 'btn btn-success' %>
	</div>
<% end %>