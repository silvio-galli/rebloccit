<h1><%= @post.title %></h1>

<div class="md-col-8">
	<p><%= @post.body %></p>
</div>
<div class="md-col-4">
	<%= link_to "Edit", edit_post_path(@post.id), class: 'btn btn-success' %>
	<%= link_to "Delete!", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
</div>

