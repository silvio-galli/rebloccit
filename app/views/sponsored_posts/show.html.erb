<h1><%= @sponsored_post.title %></h1>

<div class="col-md-8">
	<p><%= @sponsored_post.body %></p>
	<p><strong>Price: <%= @sponsored_post.price %> &euro;</strong></p>
</div>
<div class="col-md-4">
	<%= link_to "Edit", edit_topic_sponsored_post_path, class: 'btn btn-success' %>
	<%= link_to "Delete", [@sponsored_post.topic, @sponsored_post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this Sponsored post?'} %>
</div>
